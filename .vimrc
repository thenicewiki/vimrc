set nu
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set cindent
set cursorline
set showmatch
set ruler


set hlsearch
set showmode
set showcmd

set noerrorbells

set encoding=utf-8
set mouse=a

set scrolloff=5

syntax on

map ; :

map Q :q<CR>
map S :w<CR>

noremap H 0
noremap L $

noremap W 5w
noremap B 5b

noremap J 5j
noremap K 5k

noremap s <nop>
